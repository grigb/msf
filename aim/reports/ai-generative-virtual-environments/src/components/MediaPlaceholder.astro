---
/**
 * MediaPlaceholder.astro
 * Placeholder for images, videos, and 3D models that haven't been added yet
 */

interface Props {
  type: 'image' | 'video' | 'model' | 'diagram';
  id: string;
  description?: string;
  aspectRatio?: string;
  expectedPath?: string;
}

const {
  type,
  id,
  description,
  aspectRatio = '16 / 9',
  expectedPath
} = Astro.props;

const icons: Record<string, string> = {
  image: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><rect x="6" y="10" width="36" height="28" rx="2" stroke="currentColor" stroke-width="2"/><circle cx="16" cy="20" r="4" stroke="currentColor" stroke-width="2"/><path d="M6 32l10-10 8 8 8-8 10 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
  video: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><rect x="6" y="10" width="36" height="28" rx="2" stroke="currentColor" stroke-width="2"/><path d="M20 18v12l10-6-10-6z" fill="currentColor"/></svg>`,
  model: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><path d="M24 6l18 10v16L24 42 6 32V16L24 6z" stroke="currentColor" stroke-width="2"/><path d="M24 6v36M6 16l18 10 18-10" stroke="currentColor" stroke-width="2"/></svg>`,
  diagram: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><rect x="6" y="6" width="12" height="12" rx="2" stroke="currentColor" stroke-width="2"/><rect x="30" y="6" width="12" height="12" rx="2" stroke="currentColor" stroke-width="2"/><rect x="18" y="30" width="12" height="12" rx="2" stroke="currentColor" stroke-width="2"/><path d="M12 18v6h12v6M36 18v6H24v6" stroke="currentColor" stroke-width="2"/></svg>`
};

const typeLabels: Record<string, string> = {
  image: 'Image',
  video: 'Video',
  model: '3D Model',
  diagram: 'Diagram'
};
---

<figure class="media-placeholder" data-placeholder-id={id} style={`aspect-ratio: ${aspectRatio}`}>
  <div class="media-placeholder__content">
    <span class="media-placeholder__icon" set:html={icons[type]} />

    <div class="media-placeholder__info">
      <span class="media-placeholder__type">{typeLabels[type]} Placeholder</span>
      <span class="media-placeholder__id">{id}</span>
    </div>

    {description && (
      <p class="media-placeholder__description">{description}</p>
    )}

    {expectedPath && (
      <code class="media-placeholder__path">{expectedPath}</code>
    )}

    <span class="media-placeholder__hint">
      Media will be displayed here when available
    </span>
  </div>

  {description && (
    <figcaption class="media-placeholder__caption">{description}</figcaption>
  )}
</figure>

<style>
  .media-placeholder {
    width: 100%;
    background-color: var(--color-surface-alt);
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin: var(--space-4) 0;
  }

  .media-placeholder__content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: var(--space-6);
    text-align: center;
  }

  .media-placeholder__icon {
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .media-placeholder__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .media-placeholder__type {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .media-placeholder__id {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  .media-placeholder__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    max-width: 40ch;
    line-height: var(--line-height-relaxed);
  }

  .media-placeholder__path {
    font-size: var(--font-size-xs);
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-surface);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .media-placeholder__hint {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    opacity: 0.6;
  }

  .media-placeholder__caption {
    padding: var(--space-3);
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-align: center;
  }
</style>
