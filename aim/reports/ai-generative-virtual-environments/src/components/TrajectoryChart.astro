---
/**
 * TrajectoryChart.astro
 * Technology maturity trajectory chart using pure CSS
 */

interface TrajectoryItem {
  dimension: string;
  current: number;
  year1: number;
  year3: number;
  confidence: string;
}

interface Props {
  data?: TrajectoryItem[];
}

const { data = [] } = Astro.props;

const maxLevel = 9;

// Color per dimension
const dimensionColors = [
  { line: '#0066CC', dot: '#0066CC', bg: '#DBEAFE' },
  { line: '#10B981', dot: '#10B981', bg: '#D1FAE5' },
  { line: '#F59E0B', dot: '#F59E0B', bg: '#FEF3C7' },
  { line: '#0D9488', dot: '#0D9488', bg: '#CCFBF1' },
];

const confidenceLabel: Record<string, string> = {
  HIGH: 'High confidence',
  MEDIUM: 'Medium confidence',
  LOW: 'Low confidence',
};
---

<div class="trajectory-chart">
  <h3 class="trajectory-chart__title">Maturity Trajectory Projections</h3>

  {data.length > 0 ? (
    <div class="trajectory-chart__body">
      {/* Legend */}
      <div class="trajectory-chart__legend">
        {data.map((item, i) => {
          const colors = dimensionColors[i % dimensionColors.length];
          return (
            <div class="trajectory-chart__legend-item">
              <span
                class="trajectory-chart__legend-line"
                style={`background-color: ${colors.line}`}
              ></span>
              <span class="trajectory-chart__legend-label">{item.dimension}</span>
            </div>
          );
        })}
      </div>

      {/* Chart grid */}
      <div class="trajectory-chart__grid">
        {/* Y-axis labels */}
        <div class="trajectory-chart__y-axis">
          {Array.from({length: maxLevel}, (_, i) => maxLevel - i).map(n => (
            <span class="trajectory-chart__y-label">SRL-{n}</span>
          ))}
        </div>

        {/* Chart area */}
        <div class="trajectory-chart__area">
          {/* Horizontal grid lines */}
          {Array.from({length: maxLevel}, (_, i) => i).map(() => (
            <div class="trajectory-chart__gridline"></div>
          ))}

          {/* Data rows - each dimension */}
          {data.map((item, i) => {
            const colors = dimensionColors[i % dimensionColors.length];
            const points = [
              { label: 'Current', value: item.current },
              { label: '1 Year', value: item.year1 },
              { label: '3 Year', value: item.year3 },
            ];

            return (
              <div class="trajectory-chart__line-group" data-dimension={item.dimension}>
                {points.map((pt, j) => {
                  const bottom = ((pt.value - 1) / (maxLevel - 1)) * 100;
                  const left = (j / 2) * 100;
                  return (
                    <div
                      class="trajectory-chart__point"
                      style={`bottom: ${bottom}%; left: ${left}%; --dot-color: ${colors.dot}; --dot-bg: ${colors.bg}`}
                      title={`${item.dimension}: SRL-${pt.value} (${pt.label})`}
                    >
                      <span class="trajectory-chart__dot"></span>
                      <span class="trajectory-chart__value">SRL-{pt.value}</span>
                    </div>
                  );
                })}
              </div>
            );
          })}
        </div>

        {/* X-axis labels */}
        <div class="trajectory-chart__x-axis">
          <span>Current</span>
          <span>1 Year</span>
          <span>3 Year</span>
        </div>
      </div>

      {/* Data table for accessibility */}
      <div class="trajectory-chart__table">
        <table>
          <thead>
            <tr>
              <th>Dimension</th>
              <th>Current</th>
              <th>1-Year</th>
              <th>3-Year</th>
              <th>Confidence</th>
            </tr>
          </thead>
          <tbody>
            {data.map((item, i) => {
              const colors = dimensionColors[i % dimensionColors.length];
              return (
                <tr>
                  <td>
                    <span class="trajectory-chart__table-dot" style={`background-color: ${colors.dot}`}></span>
                    {item.dimension}
                  </td>
                  <td><strong>SRL-{item.current}</strong></td>
                  <td>SRL-{item.year1}</td>
                  <td>SRL-{item.year3}</td>
                  <td>
                    <span class={`trajectory-chart__confidence trajectory-chart__confidence--${item.confidence.toLowerCase()}`}>
                      {item.confidence}
                    </span>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    </div>
  ) : (
    <div class="trajectory-chart__placeholder">
      <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
        <polyline points="4,40 16,28 28,32 44,8" stroke="currentColor" stroke-width="2" fill="none"/>
        <circle cx="4" cy="40" r="3" fill="currentColor"/>
        <circle cx="16" cy="28" r="3" fill="currentColor"/>
        <circle cx="28" cy="32" r="3" fill="currentColor"/>
        <circle cx="44" cy="8" r="3" fill="currentColor"/>
      </svg>
      <p class="trajectory-chart__text">Trajectory Chart</p>
      <span class="trajectory-chart__hint">Technology evolution timeline visualization</span>
    </div>
  )}
  <slot />
</div>

<style>
  .trajectory-chart {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: var(--space-4) 0;
  }

  .trajectory-chart__title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-4);
  }

  .trajectory-chart__body {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .trajectory-chart__legend {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }

  .trajectory-chart__legend-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .trajectory-chart__legend-line {
    width: 20px;
    height: 4px;
    border-radius: 2px;
  }

  .trajectory-chart__legend-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .trajectory-chart__grid {
    display: grid;
    grid-template-columns: 60px 1fr;
    grid-template-rows: 1fr auto;
    gap: 0;
    min-height: 300px;
  }

  .trajectory-chart__y-axis {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-right: var(--space-2);
    grid-row: 1;
    grid-column: 1;
  }

  .trajectory-chart__y-label {
    font-size: var(--font-size-xs);
    font-family: var(--font-family-mono);
    color: var(--color-text-muted);
    text-align: right;
  }

  .trajectory-chart__area {
    position: relative;
    grid-row: 1;
    grid-column: 2;
    border-left: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .trajectory-chart__gridline {
    border-top: 1px dashed var(--color-border-light);
    height: calc(100% / 9);
  }

  .trajectory-chart__line-group {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .trajectory-chart__point {
    position: absolute;
    transform: translate(-50%, 50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    pointer-events: auto;
    z-index: 2;
  }

  .trajectory-chart__point:hover .trajectory-chart__value {
    opacity: 1;
  }

  .trajectory-chart__dot {
    width: 14px;
    height: 14px;
    border-radius: var(--radius-full);
    background-color: var(--dot-color);
    border: 3px solid var(--dot-bg);
    box-shadow: 0 0 0 1px var(--dot-color);
  }

  .trajectory-chart__value {
    font-size: var(--font-size-xs);
    font-family: var(--font-family-mono);
    font-weight: 600;
    color: var(--dot-color);
    opacity: 0.7;
    transition: opacity var(--transition-fast);
    white-space: nowrap;
  }

  .trajectory-chart__x-axis {
    display: flex;
    justify-content: space-between;
    grid-row: 2;
    grid-column: 2;
    padding-top: var(--space-2);
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--color-text-muted);
    text-transform: uppercase;
    padding-left: 0;
    padding-right: 0;
  }

  .trajectory-chart__table {
    overflow-x: auto;
  }

  .trajectory-chart__table table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--font-size-sm);
  }

  .trajectory-chart__table th {
    text-align: left;
    font-weight: 600;
    color: var(--color-text-muted);
    padding: var(--space-2) var(--space-3);
    border-bottom: 2px solid var(--color-border);
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .trajectory-chart__table td {
    padding: var(--space-2) var(--space-3);
    border-bottom: 1px solid var(--color-border-light);
    color: var(--color-text);
  }

  .trajectory-chart__table-dot {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: var(--radius-full);
    margin-right: var(--space-2);
    vertical-align: middle;
  }

  .trajectory-chart__confidence {
    font-size: var(--font-size-xs);
    font-weight: 600;
    padding: 2px var(--space-2);
    border-radius: var(--radius-full);
  }

  .trajectory-chart__confidence--high {
    color: #10B981;
    background-color: #D1FAE5;
  }

  .trajectory-chart__confidence--medium {
    color: #F59E0B;
    background-color: #FEF3C7;
  }

  .trajectory-chart__confidence--low {
    color: #DC2626;
    background-color: #FEE2E2;
  }

  .trajectory-chart__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--color-text-muted);
    gap: var(--space-2);
    padding: var(--space-6);
    background-color: var(--color-surface-alt);
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-lg);
  }

  .trajectory-chart__text {
    font-weight: var(--font-weight-semibold);
    margin: 0;
  }

  .trajectory-chart__hint {
    font-size: var(--font-size-sm);
    opacity: 0.7;
  }

  @media (max-width: 640px) {
    .trajectory-chart__grid {
      min-height: 200px;
    }

    .trajectory-chart__y-axis {
      display: none;
    }

    .trajectory-chart__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
