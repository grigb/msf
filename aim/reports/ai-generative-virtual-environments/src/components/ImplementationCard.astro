---
/**
 * ImplementationCard.astro
 * Card showing tool profile preview for grid view
 */

import SRLBadge from './SRLBadge.astro';

interface Props {
  title: string;
  org: string;
  type: string;
  srl: number;
  description: string;
  url: string;
  image?: string;
  tags?: string[];
}

const {
  title,
  org,
  type,
  srl,
  description,
  url,
  image,
  tags = []
} = Astro.props;

const placeholderImage = `data:image/svg+xml,${encodeURIComponent(`
  <svg width="400" height="200" xmlns="http://www.w3.org/2000/svg">
    <rect width="100%" height="100%" fill="#F3F4F6"/>
    <text x="50%" y="50%" fill="#9CA3AF" font-family="system-ui" font-size="14" text-anchor="middle" dominant-baseline="middle">
      ${title}
    </text>
  </svg>
`)}`;
---

<article class="impl-card">
  <a href={url} class="impl-card__link">
    <div class="impl-card__image">
      <img
        src={image || placeholderImage}
        alt={`${title} preview`}
        loading="lazy"
        decoding="async"
      />
      <div class="impl-card__badge">
        <SRLBadge level={srl} size="sm" />
      </div>
    </div>

    <div class="impl-card__content">
      <div class="impl-card__header">
        <span class="impl-card__type">{type}</span>
        <span class="impl-card__org">{org}</span>
      </div>

      <h3 class="impl-card__title">{title}</h3>

      <p class="impl-card__description">{description}</p>

      {tags.length > 0 && (
        <div class="impl-card__tags">
          {tags.slice(0, 3).map(tag => (
            <span class="impl-card__tag">{tag}</span>
          ))}
          {tags.length > 3 && (
            <span class="impl-card__tag impl-card__tag--more">+{tags.length - 3}</span>
          )}
        </div>
      )}
    </div>

    <div class="impl-card__footer">
      <span class="impl-card__cta">
        View Details
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 4l4 4-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </span>
    </div>
  </a>
</article>

<style>
  .impl-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
  }

  .impl-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .impl-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    color: inherit;
    text-decoration: none;
  }

  .impl-card__link:hover {
    text-decoration: none;
  }

  .impl-card__image {
    position: relative;
    aspect-ratio: 16 / 9;
    background-color: var(--color-surface-alt);
    overflow: hidden;
  }

  .impl-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .impl-card__badge {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
  }

  .impl-card__content {
    flex: 1;
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .impl-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-xs);
  }

  .impl-card__type {
    color: var(--color-primary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .impl-card__org {
    color: var(--color-text-muted);
  }

  .impl-card__title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text);
    line-height: var(--line-height-tight);
  }

  .impl-card__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    line-height: var(--line-height-base);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .impl-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .impl-card__tag {
    font-size: var(--font-size-xs);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-surface-alt);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .impl-card__tag--more {
    font-weight: 500;
    color: var(--color-primary);
  }

  .impl-card__footer {
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
    background-color: var(--color-surface-alt);
  }

  .impl-card__cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-primary);
  }

  .impl-card__cta svg {
    transition: transform var(--transition-fast);
  }

  .impl-card:hover .impl-card__cta svg {
    transform: translateX(4px);
  }
</style>
