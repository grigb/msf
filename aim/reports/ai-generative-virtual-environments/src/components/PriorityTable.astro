---
/**
 * PriorityTable.astro
 * Table component for displaying prioritized recommendations or items
 */

interface Props {
  columns?: string[];
}

const { columns = ['Priority', 'Item', 'Impact', 'Effort'] } = Astro.props;
---

<div class="priority-table">
  <table class="priority-table__table">
    <thead>
      <tr>
        {columns.map(col => (
          <th>{col}</th>
        ))}
      </tr>
    </thead>
    <tbody>
      <slot />
    </tbody>
  </table>
</div>

<style>
  .priority-table {
    width: 100%;
    overflow-x: auto;
    margin: var(--space-4) 0;
  }

  .priority-table__table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--font-size-sm);
  }

  .priority-table__table th,
  .priority-table__table :global(td) {
    padding: var(--space-3) var(--space-4);
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .priority-table__table th {
    font-weight: var(--font-weight-semibold);
    background-color: var(--color-surface-alt);
    white-space: nowrap;
  }

  .priority-table__table :global(tr:hover td) {
    background-color: var(--color-primary-light);
  }
</style>
