---
/**
 * GapCard.astro
 * Gap analysis card with severity indicator
 */

interface Props {
  id: string;
  title: string;
  severity: 'critical' | 'high' | 'medium' | 'low';
  description: string;
  category?: string;
  affectedAreas?: string[];
  recommendations?: string[];
}

const {
  id,
  title,
  severity,
  description,
  category,
  affectedAreas = [],
  recommendations = []
} = Astro.props;

const severityConfig: Record<string, { label: string; cssVar: string; icon: string }> = {
  critical: {
    label: 'Critical',
    cssVar: 'var(--color-error)',
    icon: `<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M8 1L1 15h14L8 1z" fill="currentColor"/><path d="M8 6v4M8 12h.01" stroke="white" stroke-width="2" stroke-linecap="round"/></svg>`
  },
  high: {
    label: 'High',
    cssVar: 'var(--color-warning)',
    icon: `<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="8" r="7" fill="currentColor"/><path d="M8 5v3M8 10h.01" stroke="white" stroke-width="2" stroke-linecap="round"/></svg>`
  },
  medium: {
    label: 'Medium',
    cssVar: 'var(--color-info)',
    icon: `<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="8" r="7" fill="currentColor"/><path d="M8 5v6" stroke="white" stroke-width="2" stroke-linecap="round"/></svg>`
  },
  low: {
    label: 'Low',
    cssVar: 'var(--color-success)',
    icon: `<svg width="16" height="16" viewBox="0 0 16 16" fill="none"><circle cx="8" cy="8" r="7" fill="currentColor"/><path d="M5 8l2 2 4-4" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`
  }
};

const config = severityConfig[severity];
---

<article class:list={['gap-card', `gap-card--${severity}`]} id={id}>
  <div class="gap-card__header">
    <span
      class="gap-card__severity"
      style={`--severity-color: ${config.cssVar}`}
      title={`Severity: ${config.label}`}
    >
      <span class="gap-card__severity-icon" set:html={config.icon} />
      <span class="gap-card__severity-label">{config.label}</span>
    </span>

    {category && (
      <span class="gap-card__category">{category}</span>
    )}

    <span class="gap-card__id">{id}</span>
  </div>

  <h3 class="gap-card__title">
    <a href={`#${id}`} class="gap-card__anchor">#</a>
    {title}
  </h3>

  <p class="gap-card__description">{description}</p>

  {affectedAreas.length > 0 && (
    <div class="gap-card__section">
      <h4 class="gap-card__section-title">Affected Areas</h4>
      <ul class="gap-card__list">
        {affectedAreas.map(area => (
          <li>{area}</li>
        ))}
      </ul>
    </div>
  )}

  {recommendations.length > 0 && (
    <div class="gap-card__section">
      <h4 class="gap-card__section-title">Recommendations</h4>
      <ul class="gap-card__list gap-card__list--recommendations">
        {recommendations.map(rec => (
          <li>{rec}</li>
        ))}
      </ul>
    </div>
  )}

  <slot />
</article>

<style>
  .gap-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .gap-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .gap-card:target {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .gap-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
    flex-wrap: wrap;
  }

  .gap-card__severity {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--severity-color);
    background-color: color-mix(in srgb, var(--severity-color) 10%, transparent);
  }

  .gap-card__severity-icon {
    display: flex;
    align-items: center;
    color: var(--severity-color);
  }

  .gap-card__category {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-surface-alt);
    border-radius: var(--radius-sm);
  }

  .gap-card__id {
    margin-left: auto;
    font-family: var(--font-family-mono);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  .gap-card__title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-3);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .gap-card__anchor {
    opacity: 0;
    color: var(--color-text-muted);
    font-weight: 400;
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .gap-card:hover .gap-card__anchor {
    opacity: 0.5;
  }

  .gap-card__anchor:hover {
    opacity: 1 !important;
    color: var(--color-primary);
  }

  .gap-card__description {
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-4);
  }

  .gap-card__section {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .gap-card__section-title {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .gap-card__list {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    padding-left: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .gap-card__list--recommendations {
    list-style-type: decimal;
  }

  /* Severity-specific left border */
  .gap-card--critical {
    border-left: 3px solid var(--color-error);
  }

  .gap-card--high {
    border-left: 3px solid var(--color-warning);
  }

  .gap-card--medium {
    border-left: 3px solid var(--color-info);
  }

  .gap-card--low {
    border-left: 3px solid var(--color-success);
  }
</style>
