---
/**
 * index.astro
 * Home page - Hero + Executive Summary + Navigation
 */
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'AI-Generated Virtual Environments';
const pageDescription = 'MSF Research Report: Comprehensive analysis of AI-powered tools for generating 3D worlds, environments, and virtual spaces.';

const keyFindings = [
  {
    stat: '25+',
    label: 'Implementations Analyzed',
    description: 'Comprehensive review of tools and platforms'
  },
  {
    stat: '10',
    label: 'Deep Dive Profiles',
    description: 'Detailed analysis of leading solutions'
  },
  {
    stat: '6',
    label: 'Gap Categories',
    description: 'Identified standardization opportunities'
  },
  {
    stat: '9',
    label: 'SRL Levels',
    description: 'Maturity assessment scale'
  }
];

const sections = [
  { href: './scope/', title: 'Scope & Definition', description: 'Domain definition, terminology, and boundaries' },
  { href: './landscape/', title: 'Current Landscape', description: 'Paradigm assessment and technology readiness' },
  { href: './implementations/', title: 'Implementations', description: 'Top tools and platforms deep dives' },
  { href: './standards/', title: 'Standards Inventory', description: 'Existing and in-development standards' },
  { href: './gaps/', title: 'Gap Analysis', description: 'Interoperability and standardization gaps' },
  { href: './coordination/', title: 'SDO Coordination', description: 'Standards body mapping and opportunities' },
  { href: './maturity/', title: 'Maturity Assessment', description: 'SRL scale and trajectory analysis' },
  { href: './recommendations/', title: 'Recommendations', description: 'MSF actions and coordination priorities' }
];
---

<BaseLayout title="" description={pageDescription}>
  <div class="home-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <p class="hero-eyebrow">Metaverse Standards Forum - Research Report</p>
          <div class="hero-rule"></div>
          <h1>{pageTitle}</h1>
          <p class="hero-subtitle">
            A comprehensive analysis of AI-powered tools and technologies for generating
            3D worlds, virtual environments, and interactive spaces. Documenting the current
            landscape, identifying standardization gaps, and providing recommendations
            for industry coordination.
          </p>
          <div class="hero-meta">
            <span>MSF-RR-AIGENV-2026-v1</span>
            <span class="hero-meta-sep"></span>
            <span>January 2026</span>
            <span class="hero-meta-sep"></span>
            <span>AI x Metaverse Working Group</span>
          </div>
          <div class="hero-actions">
            <a href="./implementations/" class="btn btn-primary">Explore Implementations</a>
            <a href="./recommendations/" class="btn btn-secondary">View Recommendations</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Key Findings -->
    <section class="findings">
      <div class="container">
        <p class="section-label">Key Figures</p>
        <div class="findings-grid">
          {keyFindings.map(finding => (
            <div class="finding-card">
              <span class="finding-stat">{finding.stat}</span>
              <span class="finding-label">{finding.label}</span>
              <span class="finding-description">{finding.description}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Section Navigation -->
    <section class="sections">
      <div class="container">
        <p class="section-label">Report Sections</p>
        <div class="sections-grid">
          {sections.map((section, index) => (
            <a href={section.href} class="section-card">
              <span class="section-number">{String(index + 1).padStart(2, '0')}</span>
              <div class="section-card-content">
                <h3>{section.title}</h3>
                <p>{section.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .home-page {
    padding-bottom: var(--space-12);
  }

  .section-label {
    font-family: var(--font-family-base);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: var(--space-6);
  }

  /* Hero */
  .hero {
    background: var(--color-surface);
    padding: var(--space-20) 0 var(--space-16);
    position: relative;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-content {
    max-width: 720px;
    position: relative;
    z-index: 1;
  }

  .hero-eyebrow {
    font-family: var(--font-family-base);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .hero-rule {
    width: 48px;
    height: 2px;
    background: var(--color-primary);
    margin-bottom: var(--space-6);
    border-radius: 1px;
  }

  .hero h1 {
    font-size: clamp(2.25rem, 4.5vw, 3.25rem);
    margin-bottom: var(--space-6);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--color-text-heading);
    font-weight: var(--font-weight-bold);
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
    max-width: 60ch;
  }

  .hero-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-family-mono);
    font-size: var(--font-size-xs);
    color: var(--color-text-light);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }

  .hero-meta-sep {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--color-border-hover);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .hero .btn {
    padding: var(--space-3) var(--space-6);
    font-size: var(--font-size-sm);
    border-radius: var(--radius-md);
  }

  .hero .btn-primary {
    background: var(--color-primary);
    color: var(--color-text-inverse);
    border: 1px solid var(--color-primary);
  }

  .hero .btn-primary:hover {
    background: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
    text-decoration: none;
  }

  .hero .btn-secondary {
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--color-border-hover);
  }

  .hero .btn-secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
  }

  /* Findings */
  .findings {
    padding: var(--space-16) 0;
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
  }

  .findings-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
  }

  .finding-card {
    background: var(--color-surface);
    padding: var(--space-8) var(--space-6);
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: box-shadow var(--transition-base);
  }

  .finding-card:hover {
    box-shadow: var(--shadow-md);
  }

  .finding-stat {
    display: block;
    font-family: var(--font-family-heading);
    font-size: 2.75rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: var(--space-3);
    letter-spacing: -0.02em;
  }

  .finding-label {
    display: block;
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-heading);
    margin-bottom: var(--space-1);
    font-size: var(--font-size-sm);
  }

  .finding-description {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  /* Sections */
  .sections {
    padding: var(--space-16) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .sections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .section-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-5);
    padding: var(--space-6);
    background: var(--color-surface);
    text-decoration: none;
    color: inherit;
    transition: box-shadow var(--transition-base), border-color var(--transition-base);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .section-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--color-border-hover);
    text-decoration: none;
  }

  .section-card:hover .section-number {
    color: var(--color-primary);
  }

  .section-number {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-light);
    line-height: 1;
    flex-shrink: 0;
    transition: color var(--transition-base);
    min-width: 2ch;
  }

  .section-card-content h3 {
    font-size: var(--font-size-base);
    font-family: var(--font-family-base);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-1);
    color: var(--color-text-heading);
  }

  .section-card-content p {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .findings-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: var(--space-12) 0 var(--space-10);
    }

    .hero h1 {
      font-size: 1.875rem;
    }

    .findings-grid {
      grid-template-columns: 1fr;
    }

    .sections-grid {
      grid-template-columns: 1fr;
    }

    .finding-stat {
      font-size: 2rem;
    }
  }
</style>
